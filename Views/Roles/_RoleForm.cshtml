@model RoleFormViewModel


<form class="form-control w-50" method="post" asp-action="Add">
    <div class="row g-3 flex-column justify-content-center">
        <div class="col-md-6">
            <label class="form-label">Role Name</label>
            <input class="form-control" asp-for="Name" placeholder="Name" />

        </div>
        <div class="col-md-6">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
    <span asp-validation-for="Name" class="text-danger mt-1"></span>
</form>