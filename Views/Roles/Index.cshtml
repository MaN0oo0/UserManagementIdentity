
@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<IdentityRole>

<div class="col-md-12">
    <h1>Roles</h1>



    <partial name="_RoleForm" model="new RoleFormViewModel()" />


    <table class="table table-striped mt-4">
        <thead>
            <tr class="bg-primary text-white">
                <td>Id</td>
                <td>Role Name</td>
            </tr>
        </thead>
        <tbody>
            @{
                if (ViewBag.SelectList != null)
                {


                    foreach (var item in (IEnumerable<SelectListItem>)ViewBag.SelectList)
                    {
                        <tr>
                            <td>@item.Value</td>
                            <td>@item.Text</td>
                        </tr>
                    }
                }
                else
                {
                    foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.Id</td>
                            <td>@role.Name</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>

