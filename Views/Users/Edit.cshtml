
@{
    ViewData["Title"] = "Edit";
}
@model ProfileFormViewModel

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <h2>Create a new user.</h2>
            <hr />

            <div class="form-floating mb-3">
                <input asp-for="FirstName" class="form-control" maxlength="100" autocomplete="FirstName" aria-required="true" placeholder="First Name" />
                <label asp-for="FirstName"></label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="LastName" class="form-control" maxlength="100" autocomplete="username" aria-required="true" placeholder="Last Name" />
                <label asp-for="LastName"></label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="UserName" class="form-control" maxlength="100" autocomplete="username" aria-required="true" placeholder="Last Name" />
                <label asp-for="UserName"></label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>



            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Update</button>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


